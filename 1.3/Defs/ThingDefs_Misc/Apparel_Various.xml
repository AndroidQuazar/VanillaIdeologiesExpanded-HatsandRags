<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_Beads</defName>
    <label>beads</label>
    <description>Large beads made of any variety of material used to signify devotion to one's beliefs.</description>
    <graphicData>
      <texPath>Things/Apparel/Beads/Beads</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.8</drawSize>
    </graphicData>
    <costStuffCount>30</costStuffCount>
    <stuffCategories>
      <li>Woody</li>
      <li>Stony</li>
	  <li>Metallic</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <WorkToMake>6000</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.1</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.8</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Beads/Beads</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <hatRenderedAboveBody>true</hatRenderedAboveBody>
      <hatRenderedBehindHead>true</hatRenderedBehindHead>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
    </apparel>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
        <li>CraftingSpot</li>
		<li>FueledSmithy</li>
		<li>ElectricSmithy</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
  
</Defs>